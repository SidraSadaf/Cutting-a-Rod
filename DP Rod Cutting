#include <iostream>
#include <algorithm>
#include <vector>

int cutRod(vector<int> v, int n){
  int dp[n+1];
  dp[0] = 0;
  
  for(int i = 1; i <= n; ++i){
    int maxx = INT_MIN;
    
    for(int j = 0; j < i; ++j){
      maxx = max(maxx, price[i] + val[i-j-1];
    }
    val[i] = maxx;
  }
  
  return val[n];
}

int main(){
  int n;
  cin>>n;
  vector<int> price;
  for(int i=0; i<n; ++i){
    int x;
    cin>>x;
    price.push_back(x);
  }
  cout<<cutRod(price, n);
}
